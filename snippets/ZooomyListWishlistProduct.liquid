{% if template contains "product" %}<div id="ZlistWishlist" data-product-id="{{product.id}}" data-handle = "{{product.handle}}" 
        data-image="{{product.featured_image | img_url: "360x"}}"  data-variantname="{{product.selected_or_first_available_variant.title}}" data-title="{{product.title}}" data-variant="{{product.selected_or_first_available_variant.id}}" data-price="{{product.selected_or_first_available_variant.price | remove: "." | remove: "," | divided_by: 100.0 }}"></div>
<script  src="https://zooomyapps.com/wishlist/ListWishlistProduct.js" data-product-id="{{product.id}}" data-shop-id="{{shop.permanent_domain}}" data-customer-id="{{customer.id}}"  data-customer="{{customer.email}}" data-customer-name="{{customer.first_name}} {{customer.last_name}}"></script>
     {% endif %}